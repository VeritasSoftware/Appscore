@inject AppSettings appSettings;
@{
    ViewData["Title"] = "Advanced";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Advanced Search</h2>

<script type="text/javascript">
    app.controller('advancedSearchController', function ($scope, $http) {
        $scope.searchName = "";
        $scope.error = "";
        $scope.results = [];
        $scope.genders = { Male: false, Female: false };
        $scope.direction = 1;
        $scope.buttonDisabled = false;

        $scope.performAdvancedSearch = function () {
            $scope.error = "";

            if ($scope.searchName.length <= 0) {
                $scope.error = "Please enter a name."
                return;
            }

            var searchRequest = { Name: $scope.searchName };

            var genders = $scope.genders;

            if (genders.Male && !genders.Female) {
                searchRequest.Gender = 1;
            }
            else if (!genders.Male && genders.Female) {
                searchRequest.Gender = 2;
            }
            else {
                searchRequest.Gender = 0;
            }

            searchRequest.Direction = $scope.direction;

            $scope.buttonDisabled = true;

            $http.post('@appSettings.WebAPIUrl' + '/advancedsearch', searchRequest)
            .then(function mySuccess(response) {
                $scope.results = response.data.searchResults;
                $scope.buttonDisabled = false;
            }, function myError(response) {
                $scope.error = response.statusText;
                $scope.buttonDisabled = false;
            });
        };
    });
</script>

<div ng-app="Appscore" ng-controller="advancedSearchController">
    <div>
        <table style="width:100%">
            <tr>
                <td style="width:60%">
                    <input type="text" style="width:100%" ng-model="searchName">
                </td>
                <td style="float:right;width:40%">
                    <div>
                        <button ng-disabled="buttonDisabled" ng-click="performAdvancedSearch()" style="width:100%" value="Search">Search</button>
                    </div>                    
                </td>
            </tr>
            <tr>
                <td style="width:60%">
                    <div style="width:100%">
                        Gender:
                        <label ng-repeat="(gender,enabled) in genders">
                            <input name="genders" type="checkbox" ng-model="genders[gender]" /> {{ gender }}
                        </label>
                    </div>
                </td>
                <td style="float:right;width:40%"></td>
            </tr>
            <tr>
                <td style="width:60%">
                    <div style="width:100%">
                        Direction:
                        <input name="direction" type="radio" ng-model="direction" value="1" ng-checked="true" /> Ancestors
                        <input name="direction" type="radio" ng-model="direction" value="2" /> Descendants                        
                    </div>
                </td>
            </tr>
        </table>

        <br />

        <div>
            <table border="1" ng-if="results.length > 0" style="width:100%">
                <thead>
                    <tr style="background-color:olive; color:white">
                        <td>ID</td>
                        <td>NAME</td>
                        <td>GENDER</td>
                        <td>BIRTHPLACE</td>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="r in results">
                        <td>{{ r.id }}</td>
                        <td>{{ r.name }}</td>
                        <td>{{ r.gender==2 ? 'Female' : 'Male' }}</td>
                        <td>{{ r.birthPlace }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        
        <div style="color:red">
            {{ error }}
        </div>
    </div>
</div>


